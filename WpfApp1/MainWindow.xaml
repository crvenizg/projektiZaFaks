                                        <Style x:Name="ItemConstStyle" TargetType="{x:Type TextBlock}">
                                            <Style.Resources>
                                                <local:ColorRowClass x:Key="ColorRowClass"/>
                                            </Style.Resources>
                                            <Style.Triggers>
